<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pro_Purchase_Order_Date__c</field>
        <field>pro_Description__c</field>
        <field>pro_Supplier_Account__c</field>
        <field>pro_Project__c</field>
        <field>pro_Region__c</field>
        <field>pro_Ledger_Lookup__c</field>
        <field>CurrencyIsoCode</field>
        <field>pro_Ledger_Amount__c</field>
        <field>pro_PO_Balance__c</field>
        <field>pro_AP_Total__c</field>
        <field>pro_Total_Amount__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>prodigy@eirtrade.ie</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>JP 19/07/2023 - Created by Prodigy</description>
        <label>Approval</label>
        <name>pro_Approval</name>
    </approvalStep>
    <description>JP 19/07/2023 - Created by Prodigy</description>
    <emailTemplate>pro_Prodigy_Email_Templates/pro_Purchase_Order_Overhead_Submission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>pro_Purchase_Order__c.pro_Status__c</field>
            <operation>equals</operation>
            <value>Draft,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>pro_Final_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>pro_Update_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>pro_Final_Rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>pro_Update_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>pro_Update_Status_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Purchase Order - Overhead Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>pro_Update_Status_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
